---
import SocialList from "@/components/SocialList.astro";
import PostPreview from "@/components/blog/PostPreview.astro";
import PageLayout from "@/layouts/Base.astro";
import { getAllPosts, sortMDByDate } from "@/data/post";

const MAX_POSTS = 10;
const allPosts = await getAllPosts();
const allPostsByDate = sortMDByDate(allPosts).slice(0, MAX_POSTS);

// const listTech: { desc: string; href: string; title: string }[] = [

const listSoft: { desc: string;  title: string }[] = [
	{
		desc: "C++ (v. 14/17/20), Python (v. 2.7/3), MATLAB, Fortran ",
		title: "Programming",
	},
	{
		desc: "Bash, Powershell",
		title: "Scripting",
	},
	{
		desc: "GNU make",
		title: "Bulding",
	},
	{
		desc: "pytest, doctest (C++, Python)",
		title: "Testing",
	},
	
];

const listLibs: { desc: string;  title: string }[] = [
	{
		desc: "Pandas, SciPy, NumPy, Seaborn, Matplotlib, CERN ROOT ",
		title: "Data Analysis",
	},
	{
		desc: "Sci-Kit-Learn, TensorFlow, PyTorch",
		title: "ML & AI Development",
	},
	{
		desc: "CUDA, multiprocessing and threading",
		title: "Parallelization",
	},
	{
		desc: "COMSOL Multiphysics, Geant4, SPICE",
		title: "Physics Simulation Platforms",
	},
	
];


---

<PageLayout meta={{ title: "Home" }}>
	<section>
		<h1 class="title mb-6">Hello World!</h1>
		<p class="mb-4">
			Hi, Iâ€™m a theme for Astro, an example of how you can use this starter to create a personal
			blog. If you want to know more about how you can customise me, add more posts, and make it
			your own, click on the github icon link below and it will take you to my repo.
		</p>
		<SocialList />
	</section>

	<section class="mt-16">
		<h1 class="title mb-6">Skills</h1>
		<!-- starts here  -->
		<h2 class="title mb-4 text-xl">Software Development</h2>
		<dl class="space-y-1.5">
			{
				listSoft.map(({ desc,  title }) => (
					<div class="flex flex-col gap-2 md:flex-row">
						<dt>
							<span class="flex cactus-link">
								{/* <a class="cactus-link" rel="noopener noreferrer" target="_blank"> */}
									{title}
								{/* </a> */}
								:
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	<!-- ends here  -->
		<!-- starts here  -->
		 <br /><br />
		<h2 class="title mb-4 text-xl">Frameworks & Libraries</h2>
		<dl class="space-y-1.5">
			{
				listLibs.map(({ desc,  title }) => (
					<div class="flex flex-col gap-2 md:flex-row">
						<dt>
							<span class="flex cactus-link">
								{/* <a class="cactus-link" rel="noopener noreferrer" target="_blank"> */}
									{title}
								{/* </a> */}
								:
							</span>
						</dt>
						<dd>{desc}</dd>
					</div>
				))
			}
		</dl>
	<!-- ends here  -->



	</section>
</section>



